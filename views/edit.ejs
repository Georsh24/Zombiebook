<% include _header %>

<h1>Actualizar perfil</h1>
<form action="/edit" method="POST">
<div class="form-group">
    <input name="displayName" type="text" class="form-control" placeholder="Nombre">
</div>
<div class="form-group">
    <textarea name="bio" class="form-control" placeholder="Platicanos algo">
        <%= currentZombie.bio || "" %>
    </textarea>
</div>

<input type="submit" value="Actualizar" class="btn btn-primary btn-block"/>
</form>

<% include _footer %>